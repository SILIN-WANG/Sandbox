BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            multiline: False
            font_size: 40
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'up'
                on_press: app.increment(input_number.text, 1)
            Button:
                text: 'down'
                on_press: app.increment(input_number.text, -1)
    Button:
        text: "Convert miles to kilometres"
        on_press: app.calculate(input_number.text)
    Label:
        id: output_label
        text: app.print_km
        font_size: 40
        color: (1, 1, 0, 1)